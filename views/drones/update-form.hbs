<h2>Update the drone</h2>


<form action="/drones/{{_id}}/edit" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input required type="text" class="form-control" id="name" name="name" value="{{name}}">
  </div>
  <div class="mb-3">
    <label for="propellers" class="form-label">Number of Propellers</label>
    <input required type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
  </div>

  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Maximum Speed</label>
    <input required type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>